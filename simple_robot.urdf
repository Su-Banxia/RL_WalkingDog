<?xml version="1.0"?>
<robot name="simple_biped_with_even_larger_feet">

  <!-- ==========================
       1. Torso Link
       ========================== -->
  <link name="torso">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.15 0.15"/>
      </geometry>
      <material name="gray">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.10 0.20 0.30"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.5"/>
      <inertia 
        ixx="0.006" ixy="0.0" ixz="0.0" 
        iyy="0.012" iyz="0.0" 
        izz="0.009"/>
    </inertial>
  </link>

  <!-- ==========================
       2. Left Upper Leg Link
       ========================== -->
  <link name="left_upper_leg">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia 
        ixx="0.005" ixy="0.0" ixz="0.0" 
        iyy="0.005" iyz="0.0" 
        izz="0.001"/>
    </inertial>
  </link>

  <!-- ==========================
       3. Left Lower Leg Link
       ========================== -->
  <link name="left_lower_leg">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <mass value="0.8"/>
      <inertia 
        ixx="0.004" ixy="0.0" ixz="0.0" 
        iyy="0.004" iyz="0.0" 
        izz="0.0008"/>
    </inertial>
  </link>

  <!-- ==========================
       4. Left Foot Link （进一步放大）
       ========================== -->
  <link name="left_foot">
    <visual>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.10 0.02"/> <!-- 加宽脚部以提高稳定性 -->
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.10 0.02"/> <!-- 加宽脚部以提高稳定性 -->
      </geometry>
      <surface>
        <friction>
          <lateral_friction value="5.0"/>  <!-- 增加横向摩擦系数 -->
          <friction_2 value="4.0"/>        <!-- 设置纵向摩擦系数 -->
          <friction_anchor value="1"/>     <!-- 启用各向异性摩擦 -->
        </friction>
        <contact>
          <contact_damping value="100"/>    <!-- 增加接触阻尼 -->
          <contact_stiffness value="2000"/> <!-- 增加接触刚度 -->
        </contact>
      </surface>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia 
        ixx="0.002" ixy="0.0" ixz="0.0" 
        iyy="0.003" iyz="0.0" 
        izz="0.002"/>
    </inertial>
  </link>

  <!-- ==========================
       5. Right Upper Leg Link
       ========================== -->
  <link name="right_upper_leg">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia 
        ixx="0.005" ixy="0.0" ixz="0.0" 
        iyy="0.005" iyz="0.0" 
        izz="0.001"/>
    </inertial>
  </link>

  <!-- ==========================
       6. Right Lower Leg Link
       ========================== -->
  <link name="right_lower_leg">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <mass value="0.8"/>
      <inertia 
        ixx="0.004" ixy="0.0" ixz="0.0" 
        iyy="0.004" iyz="0.0" 
        izz="0.0008"/>
    </inertial>
  </link>

  <!-- ==========================
       7. Right Foot Link 
       ========================== -->
  <link name="right_foot">
    <visual>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.10 0.02"/> 
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.10 0.02"/> 
      </geometry>
      <surface>
        <friction>
          <lateral_friction value="5"/>  <!-- 增加横向摩擦系数 -->
          <friction_2 value="4.0"/>        <!-- 设置纵向摩擦系数 -->
          <friction_anchor value="1"/>     <!-- 启用各向异性摩擦 -->
        </friction>
        <contact>
          <contact_damping value="100"/>    <!-- 增加接触阻尼 -->
          <contact_stiffness value="2000"/> <!-- 增加接触刚度 -->
        </contact>
      </surface>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia 
        ixx="0.002" ixy="0.0" ixz="0.0" 
        iyy="0.003" iyz="0.0" 
        izz="0.002"/>
    </inertial>
  </link>

  <!-- ==========================
       8. Joints
       ========================== -->

  <!--  Left Hip Joint  -->
  <joint name="left_hip_joint" type="revolute">
    <parent link="torso"/>
    <child link="left_upper_leg"/>
    <origin xyz="0 0.075 -0.075" rpy="0 0 0"/> <!-- 调整髋关节位置，降低高度 -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="80" velocity="2.0"/>
  </joint>

  <!--  Left Knee Joint  -->
  <joint name="left_knee_joint" type="revolute">
    <parent link="left_upper_leg"/>
    <child link="left_lower_leg"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.0" effort="80" velocity="2.0"/>
  </joint>

  <!--  Left Ankle Joint  -->
  <joint name="left_ankle_joint" type="revolute">
    <parent link="left_lower_leg"/>
    <child link="left_foot"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="48" velocity="2.0"/>
  </joint>

  <!--  Right Hip Joint  -->
  <joint name="right_hip_joint" type="revolute">
    <parent link="torso"/>
    <child link="right_upper_leg"/>
    <origin xyz="0 -0.075 -0.075" rpy="0 0 0"/> <!-- 调整髋关节位置，降低高度 -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="80" velocity="2.0"/>
  </joint>

  <!--  Right Knee Joint  -->
  <joint name="right_knee_joint" type="revolute">
    <parent link="right_upper_leg"/>
    <child link="right_lower_leg"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.0" effort="80" velocity="2.0"/>
  </joint>

  <!--  Right Ankle Joint  -->
  <joint name="right_ankle_joint" type="revolute">
    <parent link="right_lower_leg"/>
    <child link="right_foot"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="48" velocity="2.0"/>
  </joint>

</robot>